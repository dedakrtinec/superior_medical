---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---
<div class="mb-8">
  <h3 class="text-lg font-semibold mb-3">Filtrovat podle t√©mat</h3>
  <div class="flex flex-wrap gap-2">
    {tags.map((tag: string) => (
      <button
        class="px-3 py-1 bg-gray-100 hover:bg-blue-100 rounded-full text-sm tag-filter"
        data-tag={tag}
      >
        {tag}
      </button>
    ))}
  </div>
</div>