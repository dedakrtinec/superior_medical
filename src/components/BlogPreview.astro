---
import { getCollection } from 'astro:content';
import BlogCard from './BlogCard.astro';

interface Props {
  posts: Array<any>; // Použijeme typ z content collections
}

const { posts } = Astro.props;
const latestPosts = posts
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);
---
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center">Nejnovější články</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {latestPosts.map((post) => (
        <BlogCard post={post} />
      ))}
    </div>
    <div class="text-center mt-8">
      <a
        href="/blog"
        class="inline-block px-6 py-3 bg-blue-800 text-white rounded-lg hover:bg-blue-700 transition-colors"
      >
        Zobrazit všechny články
      </a>
    </div>
  </div>
</section>
