const benefits = [
  {
    title: "Nastavitelný objem",
    description: "Možnost přizpůsobení velikosti balonu umožňuje lékařům optimalizovat účinky balonu podle potřeb pacienta."
  },
  {
    title: "Dlouhodobý efekt",
    description: "Spatz je jediný intragastrický balon na trhu, který může zůstat v žaludku po dobu 12 měsíců, což vede k trvalejším výsledkům."
